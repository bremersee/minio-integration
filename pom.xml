<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.bremersee</groupId>
    <artifactId>common-parent</artifactId>
    <version>3.0.0-SNAPSHOT</version>
    <relativePath/>
  </parent>

  <artifactId>minio-integration-parent</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>Minio Integration Parent Module</name>
  <description>
    Minio Integration
  </description>
  <inceptionYear>2022</inceptionYear>
  <url>https://github.com/bremersee/minio-integration</url>

  <modules>
    <module>minio-integration</module>
    <module>minio-integration-spring-boot-autoconfigure</module>
    <module>minio-integration-spring-boot-starter</module>
  </modules>

  <properties>
    <github.repo>minio-integration</github.repo>
    <!--suppress UnresolvedMavenProperty -->
    <gh-pages-staging-dir>${maven.multiModuleProjectDirectory}/target/staging</gh-pages-staging-dir>

    <!-- see https://www.eclemma.org/jacoco/trunk/doc/prepare-agent-mojo.html -->
    <argLine>-Dorg.bremersee.test.executor=NOT_SPECIFIED</argLine>
    <!-- <argLine>-Dorg.bremersee.test.executor=BUILD_SYSTEM</argLine> -->

    <common-exception.version>1.0.0-SNAPSHOT</common-exception.version>
  </properties>

  <developers>
    <developer>
      <id>bremersee</id>
      <name>Christian Bremer</name>
      <organization>bremersee.org</organization>
      <organizationUrl>https://bremersee.org</organizationUrl>
      <email>christian@bremersee.org</email>
      <timezone>+1</timezone>
      <roles>
        <role>Developer</role>
      </roles>
    </developer>
  </developers>

  <organization>
    <name>bremersee.org</name>
    <url>https://bremersee.org</url>
  </organization>

  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>https://www.apache.org/licenses/LICENSE-2.0</url>
    </license>
  </licenses>

  <scm>
    <url>https://github.com/bremersee/minio-integration</url>
    <connection>scm:git:git://github.com/bremersee/minio-integration.git</connection>
    <developerConnection>scm:git:git@github.com:bremersee/minio-integration.git</developerConnection>
  </scm>

  <issueManagement>
    <url>https://github.com/bremersee/minio-integration/issues</url>
    <system>GitHub Issues</system>
  </issueManagement>

  <distributionManagement>
    <snapshotRepository>
      <id>ossrh</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
    </snapshotRepository>
    <site>
      <id>bremersee-sites</id>
      <url>
        dav:https://nexus.bremersee.org/repository/maven-sites/minio-integration/${project.version}
      </url>
    </site>
  </distributionManagement>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.bremersee</groupId>
        <artifactId>common-exception</artifactId>
        <version>${common-exception.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <profiles>
    <profile>
      <id>build-system</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <properties>
        <argLine>-Dorg.bremersee.test.executor=BUILD_SYSTEM</argLine>
      </properties>
    </profile>
  </profiles>

</project>